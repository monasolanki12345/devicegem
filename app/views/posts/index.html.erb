<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  </thead>
 
  <tbody>
  
    <% @posts.each do |p| %>
    <tr>
    
      <td><%= p.title %></td>
      <td><%= p.body %></td>
      
      <td><%= link_to "Destroy", post_path(p), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
      
      
  
    </tr>
    
    <% end %>
  </tbody>
</table>
 
<br>
 